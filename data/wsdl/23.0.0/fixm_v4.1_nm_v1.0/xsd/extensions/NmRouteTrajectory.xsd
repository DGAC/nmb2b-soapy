   <xs:annotation>
      <xs:documentation>
         Extensions to the Route Trajectory so as to express European requirements on Flight 

         Planning 
      </xs:documentation>
   </xs:annotation>

   <xs:complexType name="NmFlightRouteElementType">
      <xs:annotation>
         <xs:documentation>
            Extension of route element to be able to express the evolution of the weight along 

            the trajectory. 
         </xs:documentation>
      </xs:annotation>
      <xs:complexContent>
         <xs:extension base="fb:ExtensionType">
            <xs:sequence>
               <xs:element name="weight" type="fb:WeightType" minOccurs="0" maxOccurs="1" > 
                  <xs:annotation>
                     <xs:documentation>
                        The (decreasing) weight of the flight in trajectory reflecting fuel burn. 
                     </xs:documentation>
                  </xs:annotation>
               </xs:element>
            </xs:sequence>
         </xs:extension>
      </xs:complexContent>
   </xs:complexType>
   <xs:element name="NmFlightRouteElement" type="nm:NmFlightRouteElementType" substitutionGroup="fb:Extension" /> 
</schema>
